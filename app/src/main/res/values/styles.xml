<resources>

    <style name="AppTheme" parent="BaseTheme"/>
    <style name="AppTheme.TransparentStatusBar" parent="BaseTheme.TransparentStatusBar"/>
    <style name="AppTheme.Dialog" parent="BaseTheme.Dialog"/>
    <style name="AppTheme.Settings">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:colorControlHighlight">@color/colorControlHighlightAccent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:listDivider">@null</item>
        <item name="cardStyle">@style/Card</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="md_background_color">@color/dialogBackgroundColor</item>
    </style>

    <style name="BaseTheme.TransparentStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/statusbarTransparent</item>
    </style>

    <style name="BaseTheme.Dialog" parent="BaseTheme.TransparentStatusBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/dialogBackgroundScrim</item>
        <item name="dialogBackgroundColor">@color/dialogBackgroundColor</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dialogBackgroundColor</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/playerColorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/statusbarTransparent</item>
        <item name="android:statusBarColor">@color/statusbarTransparent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:lineSpacingExtra">0.0sp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="cardCornerRadius">@dimen/default_card_radius</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabRippleColor">@color/colorControlHighlightAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicator">@drawable/shape_tab_indicator</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

</resources>
